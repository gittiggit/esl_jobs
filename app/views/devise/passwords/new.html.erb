<%= render 'home/header' %>
</header>


    <section class="login-form-sec">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-xs-12 col-sm-offset-3">
                <div class="login-form-box">
                <h3 class="ptop15 pleft15">Forgot your password?</h3>             
                <div class="login-form-cover">
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
                        <div class="col-md-12">
                          <%= f.email_field :email, :placeholder => 'Email' ,:autofocus => true %>
                        </div>
                        
                        <div class="col-md-6">
                            <button type="submit" class="login-btn">Send</button>
                        </div>
                    </form>
                    <% end %>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-12  dont-account">
                    <p><a href="<%= new_session_path(resource_name) %>">Sign in</a></p>
                </div> 

                <div class="clearfix"></div>
                </div>
                
            </div> 
              
        </div>
    </section>

<%= render 'home/footer' %>