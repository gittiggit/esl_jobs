<%= render 'home/header' %>

 </header>
 
 <% if params[:type].to_s == "business" %>
    <!-- Login form section -->
    <section class="signup-sec">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 login-form-box signup-form-cover">
                <h1>Register as an Employer</h1> 
            
                <div class="login-form-cover">

     <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
                        
                        <div class="col-md-12">
                            <%= f.text_field :username, :placeholder => 'Username' %>          
                        </div>

                        <div class="col-md-12">
                            <%= f.text_field :businessname, :placeholder => 'Business or School Name' %> 
                        </div>
                        <div class="col-md-12">
                            <%= f.text_field :first_name, :placeholder => 'First Name' %> 
                        </div>
                        <div class="col-md-12">
                            <%= f.text_field :last_name, :placeholder => 'Last Name' %> 
                        </div>
                        <div class="col-md-12">
                             <%= f.text_field :city, :placeholder => 'City' %>
                        </div>
                        <div class="col-md-12">
                            <%= f.text_field :country, :placeholder => 'Country' %>
                        </div>
                        <div class="col-md-12">
                            <%= f.text_field :email, :placeholder => 'Email' %>
                        </div>
                        <div class="col-md-12">
                            <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
                        </div>
                        <div class="col-md-12">
                            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Retype Password' %>
                        </div>
                        
                        <%= f.hidden_field :role_type_id, :value => '2' %>
                        
                       <div id="buttons" class="col-md-12">                        
                        <button type="submit" class="btn green register-btn">Register</button>
                        </div>

                    <% end %>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-12  dont-account">
                    By registering you confirm that you accept the <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a>

            </div> 
            </div> 
              
        </div>
    </section>
 
 <% elsif params[:type].to_s == "individual" %>

  <!-- Login form section -->
    <section class="signup-sec">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 login-form-box signup-form-cover">
                <h1>Register as a Teacher</h1> 
            
                <div class="login-form-cover">

                    <form>
                        <div class="col-md-12">
                            <input type="text" placeholder="First Name">                           
                        </div>
                        <div class="col-md-12">
                            <input type="text" placeholder="Last Name">
                        </div>
                        <div class="col-md-12">
                            <input type="text" placeholder="City">
                        </div>
                        <div class="col-md-12">
                            <input type="text" placeholder="Country">
                        </div>
                        <div class="col-md-12">
                            <input type="text" placeholder="E-mail">
                        </div>
                        <div class="col-md-12">
                            <input type="text" placeholder="Enter e-mail again">
                        </div>
                        <div class="col-md-12">
                            <input type="password" placeholder="Password">
                        </div>





                     <!--    <div class="col-lg-12">
                            <h3>I want to</h3>
                                <div class="select-country">
                                    <select>
                                        <option value="">Select one option</option>
                                        <option value="hire">Hire</option>
                                        <option value="work">Work</option>                                    
                                    </select> 
                                    <span class="down-arrow">
                                         <i class="fa fa-caret-down"></i>
                                    </span>
                                </div>
                        </div> -->

                        
                      
                        <div id="buttons" class="col-md-12">                        
                        <button type="submit" class="btn green register-btn">Register</button>
                        </div>


                    </form>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-12  dont-account">
                    By registering you confirm that you accept the <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a>

            </div> 
            </div> 
              
        </div>
    </section>


 <% else %>
  <!-- Login form section -->
    <section class="signup-main">
        <div class="container">
            <div class="row">
                <p class="signup-main-tagline">Let's get started! First, tell us what you're looking for.</p>
                <h1>Registration is <span>Free!</span></h1>

                 <div class="col-md-5 individual-work">
                        <h2>I am an individual looking for work</h2>
                        <p>Register as an individual, create an eResume and apply to teaching jobs!</p>
                        <div id="buttons">
                        <a href="<%= new_user_registration_path + '?type=individual' %>" class="btn green">Register Now</a>
                        </div>
                 </div>
                 <div class="col-md-2 individual-or-business">
                        <span>OR</span>
                 </div>
                 <div class="col-md-5 business-work">
                      <h2>I am a business or school and want to hire teachers</h2>
                        <p>Register for a business account, create a profile for your school and create job postings!</p>
                        <div id="buttons">
                        <a href="<%= new_user_registration_path + '?type=business' %>" class="btn green">Register Now</a>
                        </div>
                 </div>
              
        </div>
    </section>
<% end %>

