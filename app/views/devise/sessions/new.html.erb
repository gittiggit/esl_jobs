    <%= render 'home/header'  %>
       </header>
    <!-- Login form section -->
    <!-- Login form section -->
    <section class="login-form-sec">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-xs-12 col-sm-offset-3">
                <div class="login-form-box">
                <h1>Login</h1>        
                <% flash.each do |name, msg| %>
                  <div class="alert alert-info"> 
                  <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                  </div>
                <% end %>
                
                <div class="login-form-cover">
                    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                        <div class="col-md-12">
                           <%= f.email_field :email, :placeholder => 'Email' ,:autofocus => true %>
                        </div>
                        <div class="col-md-12">
                          <%= f.password_field :password, :placeholder=> 'Password' %>
                        </div>
                        <div class="col-md-12"> 
                        
                        <div class="col-md-12">
                            <div class="row">
                                    <div class="col-md-2" style="margin-right:-25px">
                                        <%= f.check_box :remember_me , :id=> 'savelogin' %>
                                    </div>
                                    <div class="col-md-6">
                                        <span class="remember-span">
                                              <% if devise_mapping.rememberable? -%>
                                               <%= f.label :remember_me %>
                                              <% end -%>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="login-btn">Login</button>
                        </div>
                        <% end %>
                        <div class="col-md-6 forget-pass">
                            <a href="<%= new_password_path(resource_name) %>">Forgot password? </a>
                        </div>
                    </form>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-12  dont-account">
                    <p>Don't have an account? <a href="<%= new_user_registration_path %>">Sign up now!</a></p>
                </div> 

                <div class="clearfix"></div>
                </div>
                
            </div> 
              
        </div>
    </section>
   
<%= render 'home/footer'  %>
