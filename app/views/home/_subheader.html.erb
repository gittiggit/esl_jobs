	</script>
   <div class="header-cover">
		<div class="container">
			<div class="row">
				
				<div class="search-form-header">
                <div class="col-md-12">
                    <%= form_tag job_search_results_path, :method => 'get' do %>
                        <div class="col-md-5 col-sm-6 col-xs-12 text-field-cover">
    					   <input type="text" name="keyword" placeholder="Job title keyword">
                        </div>
                        <div class="col-md-5 col-sm-6 col-xs-12 text-field-cover">
                       <select name="countrysearch" id="country-selector" autofocus="autofocus" autocorrect="off" placeholder="Country" autocomplete="off">
                          <option value="" selected="selected">Select Country</option>
       						 <% @countries.each do |country| %>
    						     <option value="<%= country.countryname %>"><%= country.countryname %> </option>
    						 <%end%>
                        </select>
