  <%= render 'home/header' %> 
   </header>

    <section class="page-heading-sec">    
        <div class="container">
            <div class="row">
            <div class="page-heading">
                 <h1>Search Results</h1>            
            </div>       
        </div>
    </div>

    </section>
    

    <section class="search-result-sec">
        <div class="container">
            <div class="row">
            <div class="col-md-3">
                <aside class="search-filters">
                    <div class="filter-head">
                        <h1>Filter Results</h1>
                    </div>
                 <%= form_tag job_search_results_path, :method => 'get' do %>
                     <div class="filter-single-field">
                         <label for="keyword">Keyword:</label>
                         <input type="text" name="keyword" id="keyword" class="form-control" title="">
                     </div>

<!--                     <div class="filter-single-field">
                         <label for="business">Business Name:</label>
                         <input type="text" name="businessname" id="business" class="form-control" value="" title="">
                      </div>
-->   
                     <div class="filter-single-field">
                         <label for="location">Location:</label>
                         <select name="location" onchange="showcountry(this.value)" id="location" class="form-control">
                             <option value="1">Anywhere in the world </option>
                             <option value="2">Specific country</option>
                         </select>
                     </div>



                     <div class="filter-single-field" id="">
                         <label for="country">Country:</label>
                         <select name="countrysearch" id="country" class="form-control check-location" disabled="disabled">
						 <% @countries.each do |country| %>
						     <option value="<%= country.countryname %>"><%= country.countryname %> </option>
						 <%end%>	
                         </select>
                     </div>
                    
                     <div class="filter-single-field">
                         
                         
                     </div>
                     <div class="date-posted-cover">
                        <h2>Date Posted</h2> 

                            <div class="filter-single-field">
                                <div class="checkbox">
                                    <label>
                                        <input name="datesearch" type="checkbox" value="1">
                                        Last 24 hours
                                    </label>
                                </div>
                            </div>
                            <div class="filter-single-field">
                                <div class="checkbox">
                                    <label>
                                        <input name="datesearch" type="checkbox" value="7">
                                        Last 7 days
                                    </label>
                                </div>
                            </div>
                            <div class="filter-single-field">
                                <div class="checkbox">
                                    <label>
                                        <input name="datesearch" type="checkbox" value="14">
                                        Last 14 days
                                    </label>
                                </div>
                            </div>
                            <div class="filter-single-field">
                                <div class="checkbox">
                                    <label>
                                        <input name="datesearch" type="checkbox" value="30">
                                        Last 30 days
                                    </label>
                                </div>
                            </div>

                     </div>
                    <div class="clearfix"></div>
                    <div class="filter-single-field text-center">
                        <button class="btn  green-btn job-detail-btn filter-btn">Apply Filters</button>
                    </div>
                    <% end %>
                     <div class="clearfix"></div>
                </aside>

            </div>
                <div class="col-md-9 nopadding">
                <div class="col-md-12 result-top-bar-counter nopl">                       
                    <h2><%= @job_posts.count %> jobs found <%= ' under "'+ params[:keyword]  + '"' unless params[:keyword].blank? %></h2>
                </div>
               
                <div class="clearfix"></div>
                <% count = 0 %>
                <% @job_posts.each do |job_post| %>
                    <% count = count + 1  %>
                   <div class="search-result-row featured-job">
                    <div class="<%= count == 1 ? 'featured-border' : '' %>">
                        <div class="col-md-10">
                            <!-- <div class="search-result-img-cover">
                                <img src="/assets/award-logo-23.jpg">
                            </div> -->
                            <div class="search-r-content-delete">
                            <span class="feature-color"><%= count == 1 ? 'Featured' : '' %></span>
                                <h2><a <%= job_post.jobslink.blank? ? '' : 'target="_blank"' %> href="<%=job_post_path(job_post) %>"><%= raw(strip_tags(job_post.title)[0,100]) %></a></h2>
                                <h4><%= raw(strip_tags(job_post.description)[0,200]) %>...</h4>
                        
                            </div>
                        </div>                        
                         <div class="col-md-2">
                        <div class="row">
                            <div class="col-md-11">
                                <a <%= job_post.jobslink.blank? ? '' : 'target="_blank"' %> href="<%= job_post_path(job_post) %>" class="btn  green-btn job-detail-btn">Job Details</a>
                            </div>
                            <div class="col-md-12">                                
                                <span class="job-location"><%= job_post.country.countryname %></span>
                                <span class="job-date"><%= job_post.created_at.strftime("%d %b. %Y") %></span>
                            </div>
                        </div>
                        
                        </div>
                        <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                <% end %>
                     <div class="col-md-6 col-md-offset-2 topbar-pagination nopr">
                        <ul class="pagination pagination-sm pull-right">
                            <li>
                                <%= will_paginate @job_posts %> 
							</li>
                        </ul>
                    </div>



                </div>
            </div>
        </div>
    </section>
      <%= render 'home/footer' %> 