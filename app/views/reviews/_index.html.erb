     <%unless @reviews.blank?%>
     <% @reviews.each do |review| %>
           <div class="review_list">
                        <div class="review-row">
                          <div class="col-md-2">
                            <div class="comment-img">
                                <img src="/assets/davene-januszewski.jpg" width="80" height="80">
                            </div>
                          </div>
                          <div class="col-md-10">
                            <div class="reviews-cover">
                              <p><img class="quote-left" src="/assets/quote-left.png"><%= review.reviewpost %> <img class="quote-right" src="/assets/quote-right.png"></p>
                              <div class="user-name">
                                 <span class="line-left-right"></span>
                                 <span class="comment-name"><%= User.find(review.review_by).first_name %> <%= User.find(review.review_by).last_name %></span>
                                 <span class="line-left-right"></span>
                              </div>
                              
                            </div>                            
                          </div>
                          <div class="clearfix"></div>
                          </div>
    <% unless current_user.blank? %>
        <% if current_user.id == review.review_by %>
        <% @issomething = "something" %>
        <td><%= link_to 'Destroy', review_path(review, :reviewid=> review.review_to ), method: :delete, data: { confirm: 'Are you sure?' }  %></td>
         <% end %>
    <% end %>     
      </div>
    <% end %>
   <% end %>

<% unless current_user.blank? %>   
<% if @issomething.nil? && current_user.id != @user.id %>
<%= render 'reviews/form' %>
<% end %>
<% end %>
<% if (@reviews.blank?) %>
No Review
<% end %>
